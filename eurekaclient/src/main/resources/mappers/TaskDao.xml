<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantasy.eurekaclient.repository.TaskDao">
    <resultMap id="resultMap" type="com.fantasy.eurekaclient.model.dto.TaskDto">
        <result property="id" column="id"/>
        <result property="activityId" column="activity_id"/>
        <result property="taskName" column="task_name"/>
        <result property="taskDescribe" column="task_describe"/>
    </resultMap>
    <sql id="columns">
select 
t1.id,t1.activity_id,t1.task_name,t1.task_describe
 from tableName t1 
</sql>
    <select id="query" parameterType="com.fantasy.eurekaclient.service.query.TaskQuery" resultMap="resultMap">
        <include refid="columns"/>
    </select>
    <insert id="batchAdd" parameterType="com.fantasy.eurekaclient.model.dto.TaskDto">
        insert into tableName(id,activity_id,task_name,task_describe) values<foreach collection="list" item="item" open="" close="" separator=",">
            (#{item.id},#{item.activityId},#{item.taskName},#{item.taskDescribe})
        </foreach><
    /insert><
/mapper>